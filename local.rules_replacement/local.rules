# ICMP Rules  
alert icmp any any -> $HOME_NET any (msg:"ICMP Ping Detected"; sid:1000001; rev:1;)  
alert icmp any any -> any any (msg:"ICMP Echo Request"; itype:8; sid:1000002; rev:1;)  

# TCP Rules  
alert tcp any any -> $HOME_NET 22 (msg:"SSH Connection Attempt"; flags:S; sid:1000003; rev:1;)  
alert tcp any any -> $HOME_NET 80 (msg:"HTTP Traffic Detected"; sid:1000004; rev:1;)  
alert tcp any any -> $HOME_NET 21 (msg:"FTP Connection Attempt"; sid:1000005; rev:1;)  
alert tcp any any -> $HOME_NET 23 (msg:"TELNET Connection Attempt"; sid:1000006; rev:1;)  
alert tcp any any -> $HOME_NET 3306 (msg:"MySQL Connection Attempt"; sid:1000007; rev:1;)  

# Port Scan Detection - Only ONE threshold rule  
alert tcp any any -> $HOME_NET any (msg:"Possible SYN Port Scan"; flags:S; detection_filter:track by_src, count 20, seconds 60; sid:1000008; rev:1;)  

# HTTP Attacks  
alert tcp any any -> $HOME_NET 80 (msg:"Possible SQL Injection"; content:"union"; nocase; content:"select"; nocase; sid:1000010; rev:1;)  
alert tcp any any -> $HOME_NET 80 (msg:"Possible XSS Attack"; content:"<script"; nocase; sid:1000011; rev:1;)  
alert tcp any any -> $HOME_NET 80 (msg:"Possible Directory Traversal"; content:"../"; sid:1000012; rev:1;)  

# Nmap Detection  
alert tcp any any -> $HOME_NET any (msg:"NMAP XMAS Scan"; flags:FPU; sid:1000013; rev:1;)  
alert tcp any any -> $HOME_NET any (msg:"NMAP NULL Scan"; flags:0; sid:1000014; rev:1;)  
alert tcp any any -> $HOME_NET any (msg:"NMAP FIN Scan"; flags:F; sid:1000015; rev:1;)  
